<!--General Beer Pic-->
<div class="categoryPic">
	<img src="/images/beers.jpg" class="img-responsive">
</div>

<!--Display beer type and each associated beer pair-->
<div id="typeTitle">
	<h4>Simple Pairs for <%=@beer.beer_type%></h4>			
</div>
<div>
		<%@beer.beerpairs.each do |beerpair|%>
		<li>
			<%=beerpair.food.food_type%>	
		</li>
		<%end%>
</div>


<!--Button to make another pairing-->
<br>
<a href="/beers">
	<button class="button btn-primary" id="pairAnother"> Pair Another Beer	
	</button>
</a>
