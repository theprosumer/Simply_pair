<!--For each beer type in wines tables display a clickable div with -->
<!--the type centered-->

<!--Top Nav-->
<div id="topNav">
	<p><a href="/home"> Home </a></p>
</div>

<!--Beer Category Pic-->
<div class="categoryPic">
	<img src="/images/beers.jpg" class="img-responsive"">
</div>

<h4>Choose a beer to pair...</h4>
	<!--for each beer type render a div with a class of div-btn and that beertype--> 
<div>
	<% @beers.each do |beer| %>
		<div class="well col-md-4">
			<a href="beers/pairs/<%=beer.id%>">
				<%=beer.beer_type %>
			</a>
		</div>			
	<% end %>			
</div>
<!--Buttons to make another pairing-->
<div>
	<a href="/foods"><button class="button btn-primary" id="pairAnother">Pair by Food	
	</button></a>
	<br><br>
	<a href="/wines"><button class="button btn-danger" id="pairAnother">Pair by Wine	
	</button></a>
	<br>
	<a href="/home/logout"> Logout</a>
</div>